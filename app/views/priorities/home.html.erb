              <label for="pinned">Pin this task?</label>:
              <input type="checkbox" class="form-control" name="pinned" ng-model="vm.current_task.pinned"><br>
            </div>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <input type="submit" ng-click="vm.saveEdits(vm.current_task, <%=current_user.id %>)" class="btn btn-primary" name="commit" value="Save Changes" data-dismiss="modal" data-disable-with="submit">
        </form>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
  <% end %>
</div>