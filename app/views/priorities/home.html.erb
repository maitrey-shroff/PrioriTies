<% if current_user %>
<div ng-controller="pageCtrl as vm" ng-init="vm.initFunc(<%=current_user.id %>)">

  <div class="container">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th> 
            <span ng-click="sortBy('title')">Title</span>
            <span class="sortorder" ng-show="propertyName === 'title'" ng-class="{reverse: reverse}"></span>
          </th>
          <th> 
            <span ng-click="sortBy('priority_level')">Priority</span>
            <span class="sortorder" ng-show="propertyName === 'priority_level'" ng-class="{reverse: reverse}"></span>
          </th>
          <th> 
            <span ng-click="sortBy('completion_time')">Time to complete</span>
            <span class="sortorder" ng-show="propertyName === 'completion_time'" ng-class="{reverse: reverse}"></span>
          </th>
          <th>
            <span ng-click="sortBy('date_time')">Due date</span>
            <span class="sortorder" ng-show="propertyName === 'date_time'" ng-class="{reverse: reverse}"></span>
          </th>
        </tr>
      </thead>
      <tbody>
      <% if current_user %>
        <tr ng-repeat="task in vm.tasks | orderBy:vm.propertyName:vm.reverse" ng-click="vm.getDetails(task.id)" data-toggle="modal" data-target="#detailView">
          <td> {{ task.title }} </td>
          <td> {{ task.priority_level }} </td>
          <td>{{ task.completion_time }} </td>
          <td>{{ task.date_time }} </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
<% end %>

  <div id="detailView" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h3 class="modal-title">{{ vm.current_task.title }}</h3>
        </div>
        <div class="modal-body">
        <!-- add remaining details -->
          <h4>Description:</h4>
          <p>{{ vm.current_task.description }}</p>
          <h4>Completion Time</h4>
          <p>{{ vm.current_task.completion_time }}</p>
          <h4>Priority Level</h4>
          <p>{{ vm.current_task.priority_level }}</p>
          <h4>Pinned?</h4>
          <p>{{ vm.current_task.pinned }}</p>
          <h4>Due Date</h4>
          <p>{{ vm.current_task.date_time }}</p>
          <h4>Completed?</h4>
          <p>{{ vm.current_task.status }}</p>
          <h4>Address</h4>
          <p>{{ vm.current_task.address }}</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#editModal" data-dismiss="modal">Edit PrioriTie</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

  <% if current_user %>
  <div id="currentUserId"><%= current_user.id %></div>

  <div id="editModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">Edit PrioriTie</h4>
        </div>
        <div class="modal-body">
          <form action="/priorities/5" accept-charset="UTF-8" method="post" class="ng-pristine ng-valid"><input name="utf8" type="hidden" value="âœ“" autocomplete="off"><input type="hidden" name="_method" value="patch" autocomplete="off"><input type="hidden" name="authenticity_token" value="a0ROr43xb9fst+XdLeXfm5ST/srLqj7obeBt1N+HFlIwwydnUxZ1BHurwA57xVrpBxUpSCmyX2FVcIsXXbr6lw==" autocomplete="off">
          <div class="form-group">
            <div>
              <label for="title">Title</label>:
              <input type="text" class="form-control" name="title" id="title" ng-model="vm.current_task.title">
            </div>

            <div>
              <label for="description">Description</label>:
              <input type="text" class="form-control" name="description" id="description" ng-model="vm.current_task.description">
            </div>

            <div>
              <label for="date_time">Priority level</label>:
              <input type="text" class="form-control" name="priority_level" id="priority_level" ng-model="vm.current_task.priority_level">
            </div>

            <div>
              <label for="category_id">Category</label>:
              <input type="text" class="form-control" name="category_id" id="category_id" ng-model="vm.current_task.category_id">
            </div>

            <div>
              <label for="address">Address</label>:
              <input type="text" class="form-control" name="address" id="address" ng-model="vm.current_task.address">
            </div>

            <div>
              <label for="completion_time">Completion time</label> (in minutes):
              <input type="text" class="form-control" name="completion_time" id="completion_time" ng-model="vm.current_task.completion_time">
            </div>

            <div>
              <label for="date_time">Date time</label>:
              <input type="text" name="date_time" class="form-control" id="date_time" ng-model="vm.current_task.date_time">
            </div>

