<div class="container">

<h1> Add New PrioriTie </h1>

<%= form_tag "/priorities/#{@task.id}", method: :patch do %>

  <div>
    <%= label_tag :title %>:
    <%= text_field_tag :title, @task.title %>
  </div>

  <div>
    <%= label_tag :description %>:
    <%= text_field_tag :description, @task.description %>
  </div>

  <div>
    <%= label_tag :category_id %>:
    <%= text_field_tag :category_id, @task.category_id %>
  </div>

  <div>
    <%= label_tag :address %>:
    <%= text_field_tag :address, @task.address %>
  </div>

  <div>
    <%= label_tag :completion_time %> (in minutes):
    <%= text_field_tag :completion_time, @task.completion_time %>
  </div>

  <div>
    <%= label_tag :date_time %>:
    <%= text_field_tag :date_time, @task.date_time %>
  </div>
  
  <div>
    <%= label_tag :pinned %>:
    <%= text_field_tag :pinned, @task.pinned %>
  </div>
  
  <div>
    <%= submit_tag "submit" %>
  </div>

<% end %>

</div>