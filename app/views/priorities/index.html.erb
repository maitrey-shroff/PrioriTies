<div ng-controller="pageCtrl">
  <div class="container">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>Title</th>
          <th>Priority</th>
          <th>Time to complete</th>
          <th>Due date</th>
        </tr>
      </thead>
      <tbody>
      <% if current_user %>
        <% current_user.tasks.each do |task| %>
        <tr ng-click="getDetails(<%= task.id %>)" data-toggle="modal" data-target="#detailView">
          <td><%= task.title %></td>
          <td><%= task.priority_level %></td>
          <td><%= task.completion_time %></td>
          <td><%= task.date_time %></td>
        </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>

  <div id="detailView" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">{{ current_task.title }}</h4>
        </div>
        <div class="modal-body">
        <!-- add remaining details -->
          <h5>Description:</h5>
          <p>{{ current_task.description }}</p>
          <p>{{ current_task.completion_time }}</p>
          <p>{{ current_task.priority_level }}</p>
          <p>{{ current_task.pinned }}</p>
          <p>{{ current_task.date_time }}</p>
          <p>{{ current_task.status }}</p>
          <p>{{ current_task.address }}</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-default" data-toggle="modal" data-target="#editModal" data-dismiss="modal">Edit PrioriTie</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

